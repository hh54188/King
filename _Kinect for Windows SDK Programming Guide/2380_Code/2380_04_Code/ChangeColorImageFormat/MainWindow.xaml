<Window x:Class="ChangeColorImageFormat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Color Image Format" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="273*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <Label Margin="5" FontWeight="Bold" Content="Select Image Format"/>
            <ComboBox Grid.Column="0" Width="200" Margin="5" x:Name="colorFormatControl" SelectionChanged="ColorFormatControl_SelectionChanged"></ComboBox>
        </StackPanel>
        <Image x:Name="colorimageControl" Stretch="Fill" Grid.Row="1" />
    </Grid>
</Window>
