<Window x:Class="Infrared.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Infrared Stream" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"></RowDefinition>
            <RowDefinition Height="269*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="White" Grid.Column="0"  Grid.ColumnSpan="2" Orientation="Horizontal">
            <Image VerticalAlignment="Top" Source="/KinectIcon.png" Width="32" Height="32" HorizontalAlignment="Left" Margin="5,5,0,0" />
            <Label Foreground="#007ACC" FontSize="20" FontFamily="Segoe UI SemiBold" Content="Kinect Infrared Stream" HorizontalAlignment="Left"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  VerticalAlignment="Top"  Margin="5,0"  />
        </StackPanel>
        <Image x:Name="VideoControl" Stretch="Fill" Margin="0,42,0,0" Grid.RowSpan="2" />
        <Button Grid.Row="1"  x:Name="ButtonTurnOFFIR" Content="Turn OFF IR Emitter" Click="TurnOFFIR" Height="34" HorizontalAlignment="Left" Margin="381,12,0,0" VerticalAlignment="Top" Width="110" />
    </Grid>
</Window>
