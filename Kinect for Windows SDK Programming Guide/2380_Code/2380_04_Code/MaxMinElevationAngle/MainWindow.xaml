<Window x:Class="MaxMinElevationAngle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maximum and Minimum Elevation Angle" Height="242" Width="454">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210*" />
            <ColumnDefinition Width="222*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="117*" />
            <RowDefinition Height="86*" />
        </Grid.RowDefinitions>
        <Button Margin="12,40" x:Name="maximumElevationAngle" Content="Get Maximum Elevation Angle" Click="MaximumElevationAngle_Click"></Button>
        <Button Margin="12,40" x:Name="minimumElevationAngle" Grid.Row="0" Grid.Column="1"  Content="Get Minimum Elevation Angle" Click="MinimumElevationAngle_Click"></Button>
        <TextBlock Margin="12,10,12,30" Grid.Row="1" x:Name="maxElevationAngle" Text="Maximum Elevation Angle"/>
        <TextBlock Margin="12,10,12,30"  Grid.Row="1" Grid.Column="1"  x:Name="minElevationAngle" Text="Minimum Elevation Angle"/>
    </Grid>
</Window>
